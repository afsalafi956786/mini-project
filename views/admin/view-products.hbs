<section>
    <div class="container table-responsive">
      <div class="row w-25 mt-3">
        <a href="/admin/add-products" class="btn btn-primary my-3">Add Product</a>
      </div>
        <table class="table mt-3 ">
  <thead>
    <tr>
      <th scope="col">Count</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
       <th scope="col">Select</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}

    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img width="50px" height="50px" src="{{this.image}}" alt=""></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete this item {{this.Name}} ?')">Delete</a></td>
      <td> <a data-bs-toggle="modal" data-bs-target="#data-{{@index}}" href="/admin/edit-product" class="btn btn-warning ">Edit</a></td>
    </tr>




<!-- Modal -->
<div class="modal fade" id="data-{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Product</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

             <form action="/admin/view-products/{{this._id}}" method="POST">
              <label for="">Name</label>
              <input type="text" name="Name" value="{{this.Name}}" class="form-control">

               <label for="">Category</label>
              <input type="text" name="Category" value="{{this.Category}}" class="form-control">

              <label for="">Description</label>
              <input type="text" name="Description" value="{{this.Description}}" class="form-control">

              <label for="">Price</label>
              <input type="text" name="Price" value="{{this.Price}}" class="form-control">

              <label for="">Image</label>
              <input type="text" name="image"  value="{{this.image}}" class="form-control">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
         </form>
</div>
    </div>
  </div>
</div>
{{!--modeal end--}}
   {{/each}}
  </tbody>
</table>
    </div>
</section>